[user]
  name = Ken Dale
  email = ken@kendaleiv.com
[core]
  autocrlf = true
  ignorecase = false
[alias]
  c = commit
  co = checkout
  d = diff --patch-with-stat
  s = "status -s"
[pull]
  ff = only
[push]
  default = simple
[diff]
  guitool = kdiff3
[difftool]
  prompt = false
[difftool "kdiff3"]
  path = C:/Program Files/KDiff3/kdiff3.exe
[merge]
  tool = kdiff3
[mergetool]
  keepBackup = false
[mergetool "kdiff3"]
  path = C:/Program Files/KDiff3/kdiff3.exe
[gui]
  gcwarning = false
